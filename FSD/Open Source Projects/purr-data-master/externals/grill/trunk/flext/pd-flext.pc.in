prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
includedir=@includedir@/flext

Name: pd-flext
Description: C++ glue layer for Pure Data and Max
Version: @VERSION@
Cflags: -I${includedir} -DPD -DFLEXT_SYS=2 -DFLEXT_SHARED
Libs: -L${libdir} -lflext-pd

